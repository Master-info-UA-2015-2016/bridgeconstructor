	<!-- 14. SI traffic train    ET distance > 40    ALORS NON Bois -->
		<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="rail traffic" value="false" />
			<antecedent type="comparison" name="length" operator=">" value="40" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="wood" value="false" />
		</consequences>
	</bridge_rule>

		
	<!-- 15. SI  nbvoies >= 3    ALORS solidité > 180 -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="lane number" operator=">=" value="3" />
		</antecedents>
		<consequences>
			<consequence type="comparison" name="resistance" value="180" />
		</consequences>
	</bridge_rule>	
	
	<!-- 16. SI montagne ALORS Vent ET hauteur = 35 -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="mountain" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="tempest risk" value="true" />
			<consequence type="comparison" name="height" operator="=" value="35" />
		</consequences>
	</bridge_rule>
	
	<!-- 17. SI hauteur >50 ALORS Acier -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="height" operator=">" value="50" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="use steel" value="true" />
		</consequences>
	</bridge_rule>
	
