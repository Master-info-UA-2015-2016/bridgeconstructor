	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="fire" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="use wood" value="false" />
			<consequence type="affirmation" name="use steel" value="false" />
		</consequences>
	</bridge_rule>
	
	<!-- 20. SI hauteur >15 Alors NON pont de voûtes -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="height" operator=">" value="15" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge vault considered" value="false" />
		</consequences>
	</bridge_rule>
	
	<!-- 21. SI longueur > 60 Alors NON Pont suspendu. -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="length" operator=">" value="60" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge hanging considered" value="false" />
		</consequences>
	</bridge_rule>
	
	<!-- 22. SI longueur < 25 Alors NON pont à hauban -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="length" operator="&lt;" value="25" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge shroud considered" value="false" />
		</consequences>
	</bridge_rule>
	
	<!-- 23. SI longueur > 50 ET  hauteur > 40 Alors NON pont à poutre -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="length" operator=">" value="50" />
			<antecedent type="comparison" name="height" operator=">" value="40" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge beam considered" value="false" />
		</consequences>
	</bridge_rule>
	
	<!--24.  SI Vent Alors NON pont suspendu -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="tempest risk" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge suspended considered" value="" />
		</consequences>
	</bridge_rule>


