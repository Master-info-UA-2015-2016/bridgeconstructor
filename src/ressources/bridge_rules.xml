	<!-- 6. SI le courant_fort ALORS Solidité = 285 ET matériaux lourds -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="high current" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="heavy" value="true" />
			<consequence type="comparison" name="minimal strength" operator="=" value="285" />
		</consequences>
	</bridge_rule>
		
	<!-- 7. SI risque_tempete, ALORS resistance (au moins) 110 -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="wind" value="true" />
		</antecedents>
		<consequences>
			<consequence type="comparison" name="minimal strength" operator="=" value="110" />
		</consequences>
	</bridge_rule>
		
	<!-- Règle : SI l'eau est salée ALORS le pont sera en matériaux non oxydable -->
