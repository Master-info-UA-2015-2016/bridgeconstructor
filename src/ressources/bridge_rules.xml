	<!-- 9. SI château ALORS pont-levis -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="castle" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="drawbridge considered" value="true" />
		</consequences>
	</bridge_rule>


	<!-- 10.	SI Pont mobile, ALORS poids limité (quels paramètres). -->
	<!-- 11.	<!-- Règle : SI la longueur est inférieur à 25 ET le nombre quotidien de passage pédestre est supérieur à 50 ALORS pont en bois --> -->
	<!-- 12.	SI si trafic piéton dans des arbres ET Pont NON solide  ALORS Pont de singe. -->
	<!-- 13.	SI densite > 50 ET traffic routier  ALORS NON Bois -->
	<!-- 14.	SI traffic train  ALORS NON Bois -->
	<!-- 15.	SI campagne ALORS Pont sans éclairage. (UTILE ? influe sur les couts ?) -->
		
	<!-- 16. SI nbvoies >= 3 ALORS Pont solide -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="lane number" operator=">=" value="3" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="solid" value="true" />
		</consequences>
	</bridge_rule>	
	
	<!-- 17. SI montagne ALORS Vent ET hauteur = 35 -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="mountain" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="wind" value="true" />
			<consequence type="comparison" name="height" operator="=" value="35" />
		</consequences>
	</bridge_rule>
	
	<!--18. SI hauteur >50 ALORS Acier -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="height" operator=">" value="50" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="steel" value="true" />
		</consequences>
	</bridge_rule>
	
	<!--23. SI NON rail traffic ET NON road traffic ET daily traffic < 200 ET longueur < 15 ALORS pont en bois(  non beton, acier ?)  -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="road traffic" value="false" />
			<antecedent type="affirmation" name="rail traffic " value="false" />
			<antecedent type="comparison" name="length" operator="&lt;" value="15" />
			<antecedent type="comparison" name="daily traffic" operator="&lt;" value="200" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="wood" value="true" />
<!-- 			<consequence type="affirmation" name="concrete" value="false" /> -->
<!-- 			<consequence type="affirmation" name="steel" value="false" /> -->
		</consequences>
	</bridge_rule>

	<!-- 24. SI incendie ALORS NON bois ET NON Acier -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="fire" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="material wood" value="false" />
			<consequence type="affirmation" name="material steel" value="false" />
		</consequences>
	</bridge_rule>
	
	<!-- 25. SI hauteur >15 Alors NON pont de voûtes -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="height" operator=">" value="15" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge vault considered" value="false" />
		</consequences>
	</bridge_rule>
	
	<!-- 26. SI longueur > 60 Alors NON Pont suspendu. -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="length" operator=">" value="60" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge hanging considered" value="false" />
		</consequences>
	</bridge_rule>
	
	<!-- 27. SI longueur < 25 Alors NON pont à hauban -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="length" operator="&lt;" value="25" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge shroud considered" value="false" />
		</consequences>
	</bridge_rule>
	
	<!-- 28. SI longueur > 50 ET  hauteur > 40 Alors NON pont à poutre -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="length" operator=">" value="50" />
			<antecedent type="comparison" name="height" operator=">" value="40" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge beam considered" value="false" />
		</consequences>
	</bridge_rule>
	
	<!--29.  SI Vent Alors NON pont suspendu -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="wind" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge suspended considered" value="" />
		</consequences>
	</bridge_rule>
	

<!-- 	REGLE MATERIAUX -> PONT -->
	<!-- 30 : SI pont en bois ALORS pont en arc envisagé -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material wood" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge arc considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 31 : SI pont en bois ALORS  pont poutre envisagé  -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material wood" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge beam considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 32 : SI pont en pierre ALORS pont à voûtes envisagé -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material stone" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge vault considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 33 : SI pont en acier ALORS pont à voûtes envisagé-->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material steel" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge vault considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 34 : SI pont en acier ALORS pont en arc envisagé -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material steel" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge arc considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 35 : SI pont en acier ALORS pont à hauban  -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material steel" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge shroud considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 36 : SI pont en acier ALORS pont suspendu envisagé   -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material steel" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge hanging considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 37 : SI pont en béton ALORS pont poutre envisagé  -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material concrete" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge beam considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 38 : SI pont en béton ALORS pont suspendu envisagé -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material concrete" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge hanging considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 39 : SI pont en béton ALORS pont à hauban -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material concrete" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge shroud considered" value="true" />
		</consequences>
	</bridge_rule>

	
