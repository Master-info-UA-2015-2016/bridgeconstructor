<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- Variables utilisée :
	environnement : fire, wind, water
	traffics possibles : naval_traffic, pedestrian_traffic, rail_traffic, road_traffic
	matériaux : wood, strength(résitance minimale du matériau)
	
	resultats (type de pont): ... 
 -->

<bridge_rules>
	
	<!-- Règle : SI l'environnement est sensible aux incendie ALORS le pont ne sera pas en bois -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="fire" value="true" />
		</antecedents>
		<consequences><!-- Voir si il fait faire une comparaison ( materials = (String) wood ) -->
			<consequence type="affirmation" name="wood" value="false" />
		</consequences>
	</bridge_rule>
	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="naval_traffic" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="water" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- Règle : SI l'environnement est sensible aux vents ALORS resistance (au moins) 110 -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="wind" value="true" />
		</antecedents>
		<consequences>
			<consequence type="comparison" name="strength" operator="=" value="110" />
		</consequences>
	</bridge_rule>
	
	<!-- Règle : SI l'eau est salée ALORS le pont sera en matériaux non oxydable -->
<!-- 	<bridge_rule> -->
<!-- 		<antecedents> -->
<!-- 			<antecedent type="affirmation" name="salt water" value="true" /> -->
<!-- 		</antecedents> -->
<!-- 		<consequences> -->
<!-- 			<consequence type="affirmation" name="oxydable" value="false" /> -->
<!-- 		</consequences> -->
<!-- 	</bridge_rule> -->
	
	<!-- Règle : SI l'environnement est montagneux ALORS l'environnement est sensible aux vents
												   ET le pont sera élevé -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="mountain" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="wind" value="true" />
			<consequence type="affirmation" name="pont élevé" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- Règle : SI le pont est elevé ALORS le pont sera solide -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="pont élevé" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="solid" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- Règle : SI le nombre de voies est supérieur ou égal à 3 ALORS le pont sera solide -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="nombre voies" operator=">=" value="3" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="solid" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- Règle : SI la longueur est inférieur à 25 ET le nombre quotidien de passage pédestre est supérieur à 50
									ALORS le pont sera en bois -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="length" operator="&lt;" value="25" />
			<antecedent type="comparison" name="daily pedestrian traffic" operator=">" value="50" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="wood" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- SI Montagne et Eau (ajouter variable ??) ALORS courant_fort -->	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="mountain" value="true" />
			<antecedent type="affirmation" name="water" value="true" />
<!-- 			<antecedent type="comparison" name="" operator="" value="" /> -->
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="high_current" value="true" />
		</consequences>
	</bridge_rule>
	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="high_current" value="true" />
		</antecedents>
		<consequences>
			<consequence type="comparison" name="strength" operator="" value="" />
			<consequence type="affirmation" name="heavy" value="true" />
		</consequences>
	</bridge_rule>
	
	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="fire" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="steel" value="false" />
			<consequence type="affirmation" name="wood" value="false" />
		</consequences>
	</bridge_rule>
	
	
<!-- 	REGLES SUR LES POIDS -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="heavy" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="light" value="false" />
		</consequences>
	</bridge_rule>
	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="light" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="heavy" value="false" />
		</consequences>
	</bridge_rule>
	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="heavy" value="false" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="light" value="true" />
		</consequences>
	</bridge_rule>
	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="light" value="false" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="heavy" value="true" />
		</consequences>
	</bridge_rule>
<!-- 	FIN REGLES SUR LES POIDS -->
	
	
