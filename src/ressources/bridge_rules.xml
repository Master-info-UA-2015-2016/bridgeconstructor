<?xml version="1.0" encoding="UTF-8"?>

<!-- Variables utilisée :
	environnement :	fire, wind, water
	traffics possibles :	naval_traffic, pedestrian_traffic, rail_traffic, road_traffic
	risques :	flood risk, 
	matériaux :	wood, stone, steel, concrete, min_strength(résistance minimale du matériau)
	pont : 		
	
	resultats (type de pont) ...: 
 -->

<bridge_rules>

	<!-- 1. SI trafic maritime, ALORS hauteur > 15 -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="naval_traffic" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="water" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 2.	SI Montagne et Eau (ajouter variable ??) ALORS courant_fort -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="water" value="true" />
			<antecedent type="affirmation" name="mountain" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="high current" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 3.	SI Eau et (variable ??)  ALORS risque_inondation -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="water" value="true" />
<!-- 		TODO	Ajouter une comparaison avec une variable ? -->
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="flood risk" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 4. SI la région est exposée aux incendies, ALORS matériaux NON bois -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="fire" value="true" />
		</antecedents>
		<consequences><!-- Voir si il fait faire une comparaison ( materials = (String) wood ) -->
			<consequence type="affirmation" name="wood" value="false" />
		</consequences>
	</bridge_rule>
	
	<!-- 5. SI la région est sujette aux passages militaires, ALORS matériaux solides (NON fragile ?) -->
	<!-- 6. SI le courant_fort ALORS Solidité = 285 ET matériaux lourds -->
	
	<!-- 7. SI risque_tempete, ALORS resistance (au moins) 110 -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="wind" value="true" />
		</antecedents>
		<consequences>
			<consequence type="comparison" name="min_strength" operator="=" value="110" />
		</consequences>
	</bridge_rule>
	
	<!-- Règle : SI l'eau est salée ALORS le pont sera en matériaux non oxydable -->
<!-- 	<bridge_rule> -->
<!-- 		<antecedents> -->
<!-- 			<antecedent type="affirmation" name="salt water" value="true" /> -->
<!-- 		</antecedents> -->
<!-- 		<consequences> -->
<!-- 			<consequence type="affirmation" name="oxydable" value="false" /> -->
<!-- 		</consequences> -->
<!-- 	</bridge_rule> -->
		
	<!-- 17. SI nbvoies >= 3 ALORS Pont solide -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="lane number" operator=">=" value="3" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="solid" value="true" />
		</consequences>
	</bridge_rule>	
	
	<!-- 18. SI montagne ALORS Vent ET hauteur = 35 -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="mountain" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="wind" value="true" />
			<consequence type="comparison" name="height" operator="=" value="35" />
		</consequences>
	</bridge_rule>
	
	<!--19. SI hauteur >50 ALORS Acier -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="height" operator=">" value="50" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="steel" value="true" />
		</consequences>
	</bridge_rule>

	
	<!-- Règle : SI la longueur est inférieur à 25 ET le nombre quotidien de passage pédestre est supérieur à 50
									ALORS le pont sera en bois -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="length" operator="&lt;" value="25" />
			<antecedent type="comparison" name="daily pedestrian traffic" operator=">" value="50" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="wood" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- SI Montagne et Eau (ajouter variable ??) ALORS courant_fort -->	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="mountain" value="true" />
			<antecedent type="affirmation" name="water" value="true" />
<!-- 			<antecedent type="comparison" name="" operator="" value="" /> -->
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="high_current" value="true" />
		</consequences>
	</bridge_rule>
	
<!-- 	SI le courant_fort Alors Solidité = 285 ET matériaux lourds -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="high_current" value="true" />
		</antecedents>
		<consequences>
			<consequence type="comparison" name="min_strength" operator="=" value="285" />
			<consequence type="affirmation" name="heavy" value="true" />
		</consequences>
	</bridge_rule>
	
	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="fire" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="steel" value="false" />
			<consequence type="affirmation" name="wood" value="false" />
		</consequences>
	</bridge_rule>
	
	
<!-- 	REGLES SUR LES POIDS -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="heavy" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="light" value="false" />
		</consequences>
	</bridge_rule>
	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="light" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="heavy" value="false" />
		</consequences>
	</bridge_rule>
	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="heavy" value="false" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="light" value="true" />
		</consequences>
	</bridge_rule>
	
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="light" value="false" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="heavy" value="true" />
		</consequences>
	</bridge_rule>
<!-- 	FIN REGLES SUR LES POIDS -->

<!-- 23. SI trafic piéton ET  longueur < 10 ALORS pont en bois(  non beton, acier) OK A REFAIRE -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="pedestrian traffic" value="true" />
			<antecedent type="comparison" name="longueur" operator="&lt;" value="10" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="material wood" value="true" />
		</consequences>
	</bridge_rule>

<!-- 24. SI incendie ALORS NON bois ET NON Acier -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="fire" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="material wood" value="false" />
			<consequence type="affirmation" name="material steel" value="false" />
		</consequences>
	</bridge_rule>
	
<!-- 25. SI hauteur >15 Alors NON pont de voûtes -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="height" operator=">" value="15" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge vault considered" value="false" />
		</consequences>
	</bridge_rule>
	
<!-- 26. SI longueur > 60 Alors NON Pont suspendu. -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="length" operator=">" value="60" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge hanging considered" value="false" />
		</consequences>
	</bridge_rule>
	
<!-- 27. SI longueur < 25 Alors NON pont à hauban -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="length" operator="&lt;" value="25" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge shroud considered" value="false" />
		</consequences>
	</bridge_rule>
	
<!-- 28. SI longueur > 50 ET  hauteur > 40 Alors NON pont à poutre -->
	<bridge_rule>
		<antecedents>
			<antecedent type="comparison" name="length" operator=">" value="50" />
			<antecedent type="comparison" name="height" operator=">" value="40" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge beam considered" value="false" />
		</consequences>
	</bridge_rule>
	
<!--29.  SI Vent Alors NON pont suspendu -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="wind" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge suspended considered" value="" />
		</consequences>
	</bridge_rule>
	

<!-- 	REGLE MATERIAUX -> PONT -->
	<!-- 30 : SI pont en bois ALORS pont en arc envisagé -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material wood" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge arc considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 31 : SI pont en bois ALORS  pont poutre envisagé  -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material wood" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge beam considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 32 : SI pont en pierre ALORS pont à voûtes envisagé -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material stone" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge vault considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 33 : SI pont en acier ALORS pont à voûtes envisagé-->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material steel" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge vault considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 34 : SI pont en acier ALORS pont en arc envisagé -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material steel" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge arc considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 35 : SI pont en acier ALORS pont à hauban  -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material steel" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge shroud considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 36 : SI pont en acier ALORS pont suspendu envisagé   -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material steel" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge hanging considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 37 : SI pont en béton ALORS pont poutre envisagé  -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material concrete" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge beam considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 38 : SI pont en béton ALORS pont suspendu envisagé -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material concrete" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge hanging considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 39 : SI pont en béton ALORS pont à hauban -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="material concrete" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="bridge shroud considered" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 40 : SI château ALORS pont levis -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="castle" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="drawbridge considered" value="true" />
		</consequences>
	</bridge_rule>
	
