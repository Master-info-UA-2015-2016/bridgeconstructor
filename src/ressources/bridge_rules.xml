	<!-- 1. SI trafic maritime, ALORS hauteur > 15 -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="naval_traffic" value="true" />
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="water" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 2.	SI Montagne et Eau (ajouter variable ??) ALORS courant_fort -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="water" value="true" />
			<antecedent type="affirmation" name="mountain" value="true" />
<!-- 			<antecedent type="comparison" name="" operator="" value="" /> -->
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="high current" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 3.	SI Eau et (variable ??)  ALORS risque_inondation -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="water" value="true" />
<!-- 		TODO	Ajouter une comparaison avec une variable ? -->
		</antecedents>
		<consequences>
			<consequence type="affirmation" name="flood risk" value="true" />
		</consequences>
	</bridge_rule>
	
	<!-- 4. SI la région est exposée aux incendies, ALORS matériaux NON bois -->
	<bridge_rule>
		<antecedents>
			<antecedent type="affirmation" name="fire" value="true" />
		</antecedents>
		<consequences><!-- Voir si il fait faire une comparaison ( materials = (String) wood ) -->
			<consequence type="affirmation" name="wood" value="false" />
		</consequences>
	</bridge_rule>
	
	<!-- 5. SI la région est sujette aux passages militaires, ALORS matériaux solides (NON fragile ?) -->
<!-- 	<bridge_rule> -->
